}



	/* Estilos del Hero Section */
  .hero-section {
    /* ALTURA: Que ocupe casi toda la pantalla al empezar (80% del alto) */
    height: 100vh; 
    
    /* EL TRUCO DEL FONDO OSCURO: */
    /* Es una capa de color negro al 70% de opacidad (rgba 0,0,0,0.7) ENCIMA de la foto */
    background-image: 
      linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)),
      url('/images/fondo rm.jpg'); /* <- CAMBIA ESTO POR TU NOMBRE DE FOTO */
      
    /* Asegura que la foto cubra todo el espacio sin deformarse */
    background-size: cover;
    background-position: center;
    
    /* CENTRADO: Usamos Flexbox para poner todo al medio */
    display: flex;
    flex-direction: column; /* Uno debajo del otro */
    justify-content: center; /* Centrado vertical */
    align-items: center;     /* Centrado horizontal */
    text-align: center;
    color: white; /* Texto blanco */
  }



  /* Estilos para el Logo dentro del Hero */
  .hero-logo {
    width: 250px;
	height: 250px; /* Ajusta este tama침o seg칰n tu logo */
    margin-bottom: 20px;
  }

  .hero-title {
    font-size: 2.5rem;
    font-weight: bold;
    margin: 0;
    text-transform: uppercase; /* Letras may칰sculas */
  }

  .hero-subtitle {
    font-size: 1.2rem;
    margin-top: 10px;
    opacity: 0.9; /* Un poco m치s suave que el t칤tulo */
  }

  /* Contenedor de los botones para que no est칠n pegados */
  .hero-buttons {
    margin-top: 30px;
    display: flex;
    gap: 20px; /* Separaci칩n entre botones */
  }



  /* El estilo del bot칩n elegante */
  .btn-outline {
    text-decoration: none;
    color: white;
    border: 2px solid white; /* Borde blanco */
    padding: 10px 25px;      /* Relleno: 10px arriba/abajo, 25px lados */
    border-radius: 50px;     /* Bordes muy redondos (tipo c치psula) */
    font-weight: bold;
    text-transform: uppercase;
    font-size: 0.9rem;
    transition: all 0.3s ease; /* Para que el cambio de color sea suave */
  }

  /* Efecto al pasar el mouse (Hover) */
  .btn-outline:hover {
    background-color: skyblue;
    color: black; /* El texto se vuelve negro para leerse sobre blanco */
    transform: scale(1.05); /* Crece un poquito */
  }



  /* Contenedor de las redes */
  .hero-social {
    margin-top: 35px; /* Separaci칩n de los botones */
    display: flex;
    gap: 25px; /* Espacio entre cada 칤cono */
  }

  /* Estilo de los enlaces (el 치rea clickable) */
  .hero-social a {
    color: rgba(255, 255, 255, 0.8); /* Blanco un pel칤n transparente */
    transition: all 0.3s ease;
    display: flex; /* Para que el SVG est칠 centrado */
  }

  /* Efecto al pasar el mouse (Hover) */
  .hero-social a:hover {
    color: skyblue; /* Blanco puro */
