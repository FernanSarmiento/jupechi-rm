---
/* Directorio.astro */
---
<section id="directorio">
    <div class="container">
        <div class="titulo-principal">
            <h2>Liderazgo Regional</h2>
            <p class="bajada">Quienes sirven a la juventud</p>
        </div>

        <div class="grupo-lideres">
            <h3 class="subtitulo-seccion">Pastores Asesores</h3>
            <div class="grid-directorio">
                
                <div class="lider-card pastor-card">
                    <div class="foto-circle">
                        <img src="/images/pastor-asesor.jpg" alt="Pastor Asesor">
                    </div>
                    <div class="info-lider">
                        <h4>Pr. David Trigo</h4>
                        <p class="cargo">Pastor Asesor</p>
                        <p class="iglesia">Iglesia de Curacaví</p>
                    </div>
                </div>

                <div class="lider-card pastor-card">
                    <div class="foto-circle">
                        <img src="/images/pastora-asesora.jpg" alt="Pastora Asesora">
                    </div>
                    <div class="info-lider">
                        <h4>Pra. Johanna Sánchez</h4>
                        <p class="cargo">Pastora Asesora</p>
                        <p class="iglesia">Iglesia de Renca</p>
                    </div>
                </div>

            </div>
        </div>

        <div class="grupo-lideres">
            <h3 class="subtitulo-seccion">Directorio Regional</h3>
            <div class="grid-directorio">
                
                <div class="lider-card">
                    <div class="foto-circle">
                        <img src="/images/directorio/f-coord.png" alt="Coordinacion">
                    </div>
                    <div class="info-lider">
                        <h4>Matías Sarmiento</h4>
                        <p class="cargo">Coordinador Regional</p>
                        <p class="iglesia">Iglesia de Renca</p>
                    </div>
                </div>

                <div class="lider-card">
                    <div class="foto-circle">
                        <img src="/images/directorio/f-subcoord.png" alt="SubCoordinacion">
                    </div>
                    <div class="info-lider">
                        <h4>Nicolás Orellana</h4>
                        <p class="cargo">SubCoordinador Regional</p>
                        <p class="iglesia">Iglesia de La Florida</p>
                    </div>
                </div>

                <div class="lider-card">
                    <div class="foto-circle">
                        <img src="/images/directorio/f-secretaria.jpg" alt="Secretaría">
                    </div>
                    <div class="info-lider">
                        <h4>Jael Rubio</h4>
                        <p class="cargo">Secretaria</p>
                        <p class="iglesia">Iglesia de Maestranza</p>
                    </div>
                </div>

                <div class="lider-card">
                    <div class="foto-circle">
                        <img src="/images/directorio/f-tesorera.jpg" alt="Tesorería">
                    </div>
                    <div class="info-lider">
                        <h4>Aline Valenzuela</h4>
                        <p class="cargo">Tesorera</p>
                        <p class="iglesia">Iglesia de Los Copihues</p>
                    </div>
                </div>

                <div class="lider-card">
                    <div class="foto-circle">
                        <img src="/images/directorio/f-coord-deptos.jpg" alt="Ayudante">
                    </div>
                    <div class="info-lider">
                        <h4>Esteban Astorga</h4>
                        <p class="cargo">Coord. Departamentos</p>
                        <p class="iglesia">Iglesia de Maipú</p>
                    </div>
                </div>

            </div>
        </div>

    </div>
</section>

<style>
    /* ESTRUCTURA BASE */
    #directorio {
        padding: 6rem 1rem;
        background-color: transparent; /* Deja ver el fondo global */
        text-align: center;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
    }

    /* TÍTULOS */
    .titulo-principal {
        margin-bottom: 4rem;
    }

    h2 { 
        font-size: 3rem; 
        /* Color Celeste del Logo */
        color: #22d3ee !important; 
        font-weight: 800;
        margin-bottom: 0.5rem;
        text-transform: uppercase;
        text-shadow: 0 0 20px rgba(34, 211, 238, 0.3); /* Glow suave */
    }

    .bajada { 
        color: #a1a1aa; 
        font-size: 1.2rem;
        font-weight: 300;
    }

    .subtitulo-seccion {
        font-size: 1.8rem;
        color: #e4e4e7; /* Blanco hueso */
        margin-bottom: 2rem;
        margin-top: 2rem;
        text-transform: uppercase;
        letter-spacing: 2px;
        display: inline-block;
        border-bottom: 2px solid #008C9E; /* Línea celeste abajo */
        padding-bottom: 5px;
    }

    /* GRILLA (Responsive y ordenada) */
    .grid-directorio {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 2rem;
        justify-content: center;
        margin-bottom: 4rem;
    }

    /* TARJETAS ESTILO "TECH" (Igual que la foto de referencia) */
    .lider-card {
        background-color: #27272a; /* Gris oscuro (Zinc 800) */
        border: 1px solid #008C9E; /* Borde del color del Logo */
        border-radius: 16px;
        padding: 2.5rem 1.5rem;
        
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1.5rem;

        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    /* Efecto Hover: La tarjeta flota y brilla */
    .lider-card:hover { 
        transform: translateY(-8px); 
        border-color: #22d3ee; /* Se pone Cyan brillante */
        box-shadow: 0 0 30px rgba(34, 211, 238, 0.25); /* Glow Neón */
    }

    /* FOTO DE PERFIL */
    .foto-circle {
        width: 140px;
        height: 140px;
        border-radius: 50%;
        overflow: hidden;
        
        /* Anillo de luz alrededor de la foto */
        border: 3px solid #008C9E;
        box-shadow: 0 0 15px rgba(0, 140, 158, 0.4);
        transition: all 0.3s ease;
    }

    .lider-card:hover .foto-circle {
        border-color: #22d3ee;
        transform: scale(1.05);
        box-shadow: 0 0 25px rgba(34, 211, 238, 0.6); /* Brilla más al hover */
    }

    img { 
        width: 100%; 
        height: 100%; 
        object-fit: cover; 
    }

    /* TEXTOS DE LA TARJETA */
    .info-lider {
        text-align: center;
    }

    h4 { 
        font-size: 1.4rem;
        color: #ffffff !important; /* Nombre en Blanco Puro */
        margin: 0 0 0.5rem 0;
        font-weight: 700;
    }
    
    .cargo { 
        color: #22d3ee; /* Cargo en Cyan Brillante */
        font-weight: 600; 
        text-transform: uppercase; 
        font-size: 0.9rem; 
        letter-spacing: 1px;
        margin: 0 0 0.5rem 0;
    }

    .iglesia {
        color: #94a3b8; /* Gris azulado */
        font-size: 0.9rem;
        font-style: italic;
    }
</style>