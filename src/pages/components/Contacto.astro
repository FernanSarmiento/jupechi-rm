<style>
  /* SECCI√ìN */
  #contacto {
    padding: 6rem 1rem;
    background-color: transparent; /* Dejamos ver el fondo global */
    text-align: center;
  }

  .contenedor-contacto {
    max-width: 900px;
    margin: 0 auto;
  }

  /* 2. T√çTULOS */
  .titulo-seccion {
    margin-bottom: 4rem;
  }

  h2 {
    font-size: 3rem;
    color: #22d3ee !important; /* Cyan Brillante */
    font-weight: 800;
    margin-bottom: 0.5rem;
    text-transform: uppercase;
    text-shadow: 0 0 20px rgba(34, 211, 238, 0.3);
  }

  .titulo-seccion p {
    color: #a1a1aa;
    font-size: 1.2rem;
    letter-spacing: 2px;
    text-transform: uppercase;
  }

  /* GRILLA */
  .datos-grid {
    display: flex;
    justify-content: center;
    gap: 2rem;
    flex-wrap: wrap; /* Para bajar en celular */
  }

  /* TARJETAS "TECH" */
  .dato-item {
    background: #27272a; /* Zinc 800 */
    padding: 3rem 2rem;
    border-radius: 20px;
    flex: 1;
    min-width: 280px;
    max-width: 400px;
    
    border: 1px solid #008C9E; /* Borde Cyan base */
    transition: all 0.4s ease;
    position: relative;
    overflow: hidden;
  }

  /* Efecto Hover: Tarjeta flota y brilla */
  .dato-item:hover {
    transform: translateY(-8px);
    border-color: #22d3ee;
    box-shadow: 0 0 30px rgba(34, 211, 238, 0.2);
  }

  /* ICONOS */
  .icon-glow {
    font-size: 3.5rem;
    margin-bottom: 1.5rem;
    filter: drop-shadow(0 0 10px rgba(255, 255, 255, 0.3));
    transition: transform 0.3s ease;
  }

  .dato-item:hover .icon-glow {
    transform: scale(1.1); /* El icono crece un poco */
  }

  h3 {
    font-size: 1.5rem;
    color: #ffffff !important;
    margin-bottom: 0.5rem;
    text-transform: uppercase;
    font-weight: 700;
  }

  p {
    font-size: 1.1rem;
    color: #d1d5db; /* Gris claro */
    margin-bottom: 2rem;
  }

  /* BOTONES TECH */
  .btn-tech {
    display: inline-block;
    padding: 12px 30px;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 700;
    text-transform: uppercase;
    font-size: 0.9rem;
    transition: all 0.3s ease;
    letter-spacing: 1px;
  }

  /* Estilo WhatsApp (Verde Ne√≥n) */
  .whatsapp {
    background-color: transparent;
    border: 2px solid #25D366;
    color: #25D366;
  }

  .whatsapp:hover {
    background-color: #25D366;
    color: #052e16; /* Texto oscuro para contraste */
    box-shadow: 0 0 20px rgba(37, 211, 102, 0.5); /* Glow Verde */
  }

  /* Estilo Correo (Cyan) */
  .correo {
    background-color: transparent;
    border: 2px solid #22d3ee;
    color: #22d3ee;
  }

  .correo:hover {
    background-color: #22d3ee;
    color: #0f172a; /* Texto oscuro */
    box-shadow: 0 0 20px rgba(34, 211, 238, 0.5); /* Glow Cyan */
  }

  /* RESPONSIVE */
  @media (max-width: 600px) {
    .datos-grid {
      flex-direction: column;
      align-items: center;
    }
    
    .dato-item {
        width: 100%; /* Ocupa todo el ancho en el celular */
        box-sizing: border-box;
    }
  }
</style>