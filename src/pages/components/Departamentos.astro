<style>
  /* ESTILOS BASE */
  section { padding: 4rem 1rem; background-color: transparent; }
  .container { max-width: 1200px; margin: 0 auto; }
  
  .titulo-seccion { text-align: center; margin-bottom: 3rem; }
  .titulo-seccion h2 { font-size: 3rem; font-weight: 800; margin-bottom: 0.5rem; text-transform: uppercase; color: #22d3ee !important; text-shadow: 0 0 20px rgba(34, 211, 238, 0.3); }
  .titulo-seccion p { color: #a1a1aa; font-size: 1.1rem; }

  /* GRILLA */
  .grid-deptos {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    justify-content: center;
  }

  /* TARJETA BASE */
  .depto-card {
    position: relative;
    height: 350px;
    border-radius: 16px;
    overflow: hidden; /* Esto recorta la imagen si se sale */
    background-color: #0f172a; /* Fondo azul oscuro por defecto */
    border: 1px solid #008C9E;
    box-shadow: 0 4px 20px rgba(0, 140, 158, 0.15);
    transition: all 0.4s ease;
  }

  .fondo-img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    
    object-fit: cover; 
    
    z-index: 0;
    filter: brightness(0.6);
    transition: transform 0.5s ease, filter 0.5s ease;
  }

  /* HOVER PC */
  .depto-card:hover { transform: translateY(-5px); border-color: #22d3ee; box-shadow: 0 0 25px rgba(34, 211, 238, 0.4); }
  
  .depto-card:hover .fondo-img { transform: scale(1.05); filter: brightness(0.4); }

  /* CONTENIDO */
  .content {
    position: absolute;
    bottom: 0; left: 0; width: 100%;
    padding: 1.5rem;
    z-index: 2;
    display: flex; flex-direction: column; gap: 0.5rem;
    background: linear-gradient(to top, rgba(15, 23, 42, 0.95) 20%, transparent 100%);
  }

  .icono { font-size: 2.5rem; margin-bottom: 0.5rem; filter: drop-shadow(0 0 8px rgba(34, 211, 238, 0.6)); }
  h3 { font-size: 1.6rem; font-weight: 700; color: #22d3ee !important; margin: 0; text-transform: uppercase; }
  p { font-size: 0.95rem; color: #e4e4e7; margin: 0; }

  @media (max-width: 768px) {

    .titulo-seccion h2 {
        font-size: 2.5rem !important;
        line-height: 1.1;
        word-wrap: break-word; 
    }
    
    .grid-deptos {
        grid-template-columns: 1fr !important;
    }
    
    .grid-deptos {
        grid-template-columns: 1fr !important;
        padding: 0 10px;
        gap: 1.5rem;
    }

    .depto-card {
        height: 300px !important; 
    }

    .fondo-img {
        height: auto !important; 
        
        width: 100% !important;
        
        /* Pegada arriba */
        top: 0 !important;
        
        object-fit: contain !important;
        object-position: top center !important;
        
        filter: brightness(0.9) !important;
    }

    /* CONTENIDO */
    .content {
        padding: 1rem !important;
        background: linear-gradient(to top, #0f172a 40%, transparent 100%) !important;
    }

    h3 { font-size: 1.4rem; }
    p { font-size: 0.9rem; }
  }
</style>