<style>
    /* SECCI√ìN */
    #eventos {
        padding: 6rem 1rem;
        background-color: transparent; /* Transparente para ver el fondo global */
    }

    .container {
        max-width: 900px; /* Un poco m√°s angosto para que se vea como lista */
        margin: 0 auto;
    }

    /* T√çTULOS */
    .titulo-seccion {
        text-align: center;
        margin-bottom: 3rem;
    }

    h2 { 
        font-size: 3rem; 
        color: #22d3ee !important; /* Cyan Brillante */
        font-weight: 800;
        margin-bottom: 0.5rem;
        text-transform: uppercase;
        text-shadow: 0 0 20px rgba(34, 211, 238, 0.3);
    }

    .titulo-seccion p {
        color: #a1a1aa;
        font-size: 1.2rem;
        letter-spacing: 2px;
        text-transform: uppercase;
    }

    /* TIMELINE (Lista de Tarjetas) */
    .timeline { 
        display: flex; 
        flex-direction: column; 
        gap: 1.5rem; 
    }

    /* TARJETA DE EVENTO (Estilo Ticket Tech) */
    .evento-card {
        display: flex;
        align-items: center;
        background-color: #27272a; /* Zinc 800 */
        border: 1px solid #3f3f46; /* Borde sutil inicial */
        border-radius: 16px;
        padding: 1.5rem;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    /* Efecto Hover */
    .evento-card:hover {
        transform: translateX(10px); /* Se mueve a la derecha */
        border-color: #22d3ee; /* Borde se enciende */
        box-shadow: 0 4px 20px rgba(0, 140, 158, 0.2);
        background-color: #202024; /* Un poco m√°s oscuro */
    }

    /* CAJA DE FECHA (Gradiente llamativo) */
    .fecha-box {
        background: linear-gradient(135deg, #008C9E, #22d3ee);
        padding: 1rem;
        border-radius: 12px;
        text-align: center;
        min-width: 80px;
        margin-right: 1.5rem;
        box-shadow: 0 0 15px rgba(34, 211, 238, 0.4); /* Glow de la fecha */
        color: #0f172a; /* Texto oscuro sobre fondo brillante para contraste */
    }

    .dia { 
        display: block; 
        font-size: 2rem; 
        font-weight: 800; 
        line-height: 1;
        color: #ffffff !important;
    }
    
    .mes { 
        display: block; 
        font-size: 0.85rem; 
        font-weight: 700; 
        text-transform: uppercase;
        margin-top: 2px;
        color: #ffffff !important;
    }

    /* INFORMACI√ìN DEL EVENTO */
    .info-evento {
        flex-grow: 1;
    }

    .info-evento h3 { 
        margin: 0 0 0.5rem 0; 
        font-size: 1.5rem; 
        color: #ffffff !important;
        font-weight: 700;
        letter-spacing: -0.5px;
    }

    .detalles {
        display: flex;
        gap: 1.5rem;
        flex-wrap: wrap;
    }

    .dato {
        color: #d4d4d8; /* Gris claro */
        font-size: 0.95rem;
        display: flex;
        align-items: center;
        gap: 0.4rem;
    }

    .icono {
        filter: drop-shadow(0 0 5px rgba(255,255,255,0.5));
    }

    /* BOT√ìN/ACCI√ìN (Flecha a la derecha) */
    .action {
        margin-left: 1rem;
        opacity: 0; /* Invisible al principio */
        transform: translateX(-10px);
        transition: all 0.3s ease;
    }

    .btn-ver {
        color: #22d3ee;
        font-weight: 600;
        font-size: 0.9rem;
        text-transform: uppercase;
    }

    /* Al pasar el mouse sobre la tarjeta, aparece la flecha */
    .evento-card:hover .action {
        opacity: 1;
        transform: translateX(0);
    }

    /* RESPONSIVE (Celulares) */
    @media (max-width: 600px) {
        .evento-card { 
            flex-direction: column;
            text-align: center; 
            padding: 2rem 1.5rem;
            gap: 1rem;
        }
        
        .fecha-box { 
            margin-right: 0; 
            min-width: 100px;
        }

        .detalles {
            justify-content: center;
            gap: 0.8rem;
            flex-direction: column;
        }

        .action {
            opacity: 1; /* En celular siempre visible */
            transform: none;
            margin-top: 1rem;
            margin-left: 0;
        }
        
        .evento-card:hover {
            transform: translateY(-5px); /* En celular sube en vez de ir al lado */
        }
    }
</style>