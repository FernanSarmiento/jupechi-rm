<style>
    /* 1. ESTRUCTURA GLOBAL DEL FOOTER */
    footer {
        background-color: #050505; /* Casi negro para cerrar la p√°gina */
        color: #d1d5db;
        padding-top: 4rem;
        font-size: 0.95rem;
        /* Borde superior Tech */
        border-top: 1px solid #008C9E; 
        box-shadow: 0 -10px 30px rgba(0, 140, 158, 0.1); /* Resplandor hacia arriba */
    }

    .footer-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px 40px 20px;
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        gap: 3rem;
    }

    .columna {
        flex: 1;
        min-width: 250px;
    }

    h3 {
        color: #22d3ee !important; /* T√≠tulos en Cyan Brillante */
        font-size: 1.2rem;
        margin-bottom: 1.5rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-weight: 700;
    }

    p {
        line-height: 1.6;
        color: #9ca3af;
    }

    /* 2. COLUMNA MARCA (LOGO + REDES) */
    .logo-footer {
        width: 80px;
        height: 80px;
        margin-bottom: 1rem;
        border-radius: 50%; /* Hace el logo redondo */
        overflow: hidden;
        border: 2px solid #3f3f46;
        background: white; /* Por si el logo es jpg con fondo blanco */
    }
    
    .logo-footer img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .social-links {
        display: flex;
        gap: 15px;
        margin-top: 1.5rem;
    }

    .social-links a {
        color: #d1d5db;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background-color: #27272a;
        border: 1px solid #3f3f46;
    }

    .social-links a:hover {
        background-color: #008C9E;
        color: white;
        transform: translateY(-3px);
        box-shadow: 0 0 15px rgba(0, 140, 158, 0.6); /* Glow al pasar mouse */
        border-color: #008C9E;
    }

    /* 3. COLUMNA LINKS */
    .links {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .links li { margin-bottom: 12px; }

    .links a {
        color: #d1d5db;
        text-decoration: none;
        transition: all 0.3s ease;
        display: inline-block;
    }

    .links a:hover {
        color: #22d3ee; /* Celeste ne√≥n */
        transform: translateX(5px); /* Se mueve a la derecha */
        text-shadow: 0 0 8px rgba(34, 211, 238, 0.4);
    }

    /* 4. COLUMNA CONTACTO */
    .dato {
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        gap: 12px;
    }
    
    .icon {
        font-size: 1.2rem;
    }

    /* 5. BARRA FINAL (COPYRIGHT) */
    .barra-final {
        background-color: #000000; /* Negro total abajo */
        padding: 20px;
        text-align: center;
        font-size: 0.85rem;
        color: #52525b;
        border-top: 1px solid #27272a;
    }

    .barra-final p { margin: 5px 0; color: #6b7280; }

    .dev a {
        color: #008C9E;
        text-decoration: none;
        font-weight: bold;
        transition: color 0.3s;
    }

    .dev a:hover {
        color: #22d3ee;
        text-decoration: underline;
    }

    .corazon { color: #ef4444; animation: beat 1.5s infinite; }

    @keyframes beat {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.2); }
    }

    /* RESPONSIVE */
    @media (max-width: 768px) {
        .footer-container {
            flex-direction: column;
            text-align: center;
            gap: 2rem;
        }
        
        .logo-footer { margin: 0 auto 1rem auto; }
        .social-links { justify-content: center; }
        .dato { justify-content: center; }
    }
</style>